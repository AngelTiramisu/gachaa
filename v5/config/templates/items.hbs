<table class="table table-striped table-hover table-condensed table-responsive" id="inventory">
    <thead>
        <tr>
            <th data-column-contents="name" data-toggle="tooltip" data-tooltip-placement="right" title="The inventory name and type" class="nowrap-this-element"><i class="fa fa-suitcase"></i> Item Name</th>
            <th data-column-contents="permissions" data-toggle="tooltip" data-tooltip-placement="auto" title="The permissions of each inventory object" class="nowrap-this-element"><i class="fa fa-check-square-o"></i> Permissions</th>
            <th data-column-contents="rarity" data-toggle="tooltip" data-tooltip-placement="auto" title="This is the weight you have given to this item. The percentage shown is the probability RIGHT NOW. If any inventory is no-copy or runs out of available supply, the percentages will change." class="nowrap-this-element"><i class="fa fa-random"></i> Rarity</th>
            <th data-column-contents="limit" data-toggle="tooltip" data-tooltip-placement="auto" title="This is how many of the item you want to be available. No-copy items must be limited to a quantity of ONE. Copyable items default to unlimited supply." class="nowrap-this-element"><i class="fa fa-signal"></i> Quantity</th>
            <th data-column-contents="action" data-toggle="tooltip" data-tooltip-placement="left" title="These are actions you can take with this row." class="nowrap-this-element"><i class="fa fa-cogs"></i> Actions</th>
        </tr>
    </thead>
    <tbody></tbody>
    <tfoot class="TODO hide">
        <tr>
            <th data-column-contents="name" data-toggle="tooltip" data-tooltip-placement="right" title="This is the total number of items">Total Items: <span id="total-items-count"></span></th>
            <th data-column-contents="permissions"><!-- quantity --></th>
            <th data-column-contents="rarity" data-toggle="tooltip" data-tooltip-placement="right" title="This is the total of the weights entered above"><span id="total-rarity"></span> = 100%</th>
            <th data-column-contents="limit"><!-- quantity --></th>
            <th data-column-contents="action"><!-- actions--></th>
        </tr>
    </tfoot>
</table>
