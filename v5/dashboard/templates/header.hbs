<div class="page-header">
    <div class="btn-group nav-links">
        <a class="btn btn-default" target="_blank" href="https://marketplace.secondlife.com/p/Easy-Gacha-Kit/5391059" data-toggle="tooltip" title="Go to the Easy Gacha Kit on SecondLife Marketplace">Easy Gacha</a>
        {{#if isAdmin}}
            <a class="btn btn-default" href="#config" data-toggle="tooltip" title="You have permission to modify this Easy Gacha. Click here to configure.">Configure This Gacha</a>
        {{/if}}
    </div>
    <h1>
        <a target="_blank" href="{{mapUrl}}" data-toggle="tooltip" title="Click to see the object's last reported location on the map">{{objectName}}</a>
        <small>
            <i class="fa fa-money"></i>
            {{#if price}}
                L${{price}} to play
            {{else}}
                FREE to play
            {{/if}}
        </small>
    </h1>
    <div>
        {{objectDesc}}
    </div>
</div>
<div class="row">
    <div id="status" class="col-sm-4"><dl>
        <dt>Status</dt>
        <dd>
            {{#if configured}}
                <div class="alert alert-success" data-toggle="tooltip" title="You may play this Easy Gacha now if you wish!">
                    <i class="fa fa-check-circle"></i>
                    Online
                </div>
            {{else}}
                <div class="alert alert-danger" data-toggle="tooltip" title="You cannot currently play this Easy Gacha, sorry.">
                    <i class="fa fa-exclamation-circle"></i>
                    Offline
                </div>
            {{/if}}
        </dd>
    </dl></div>
    <div id="memory" class="col-sm-4"><dl>
        <dt>Free Script Memory</dt>
        <dd>
            {{#if freeMemory}}
                {{#if dangerMemory}}
                    <div class="alert alert-danger" data-toggle="tooltip" title="This is how much script memory is left in bytes. Each script gets 65535 bytes. Higher numbers are better.">
                    <i class="fa fa-exclamation-circle"></i>
                {{else}}
                    {{#if warnMemory}}
                        <div class="alert alert-warning" data-toggle="tooltip" title="This is how much script memory is left in bytes. Each script gets 65535 bytes. Higher numbers are better.">
                        <i class="fa fa-info-circle"></i>
                    {{else}}
                        <div class="alert alert-success" data-toggle="tooltip" title="This is how much script memory is left in bytes. Each script gets 65535 bytes. Higher numbers are better.">
                        <i class="fa fa-check-circle"></i>
                    {{/if}}
                {{/if}}
            {{else}}
                <div class="alert alert-warning" data-toggle="tooltip" title="Data may not have loaded yet, please be patient.">
                <i class="fa fa-question-circle"></i>
            {{/if}}
            <span>
                {{#if freeMemory}}
                    {{freeMemory}}
                {{else}}
                    Unknown
                {{/if}}
            </span>
            </div>
        </dd>
    </dl></div>
    <div id="owner"  class="col-sm-4"><dl>
        <dt>Owner</dt>
        <dd>
            <div class="alert alert-info" data-toggle="tooltip" title="Click this link to view their profile in SecondLife.">
                <a href="{{ownerUrl}}">{{ownerDisplayName}} ({{ownerUserName}})</a>
            </div>
        </dd>
    </dl></div>
</div>
